{
  "name": "lulia",
  "version": "1.0.0-beta.2",
  "description": "An easy-to-use interface for astronomical calculations.",
  "repository": {
    "type": "git",
    "url": "https://github.com/marcmarine/lulia.git"
  },
  "main": "dist/index.js",
  "exports": {
    "import": "./dist/index.js",
    "require": "./dist/index.cjs"
  },
