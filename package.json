  "scripts": {
    "build:types": "dts-bundle-generator -o dist/index.d.ts src/index.ts",
    "build": "rolldown --config && npm run build:types",
    "test": "vitest"
  },
  "bugs": "https://github.com/marcmarine/lulia/issues/new",
  "author": "Marc Marin√© <shenobi@gmail.com>",
  "license": "AGPL-3.0",
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^22.10.7",
    "dts-bundle-generator": "^9.5.1",
    "rolldown": "^1.0.0-beta.1",
    "semantic-release": "^24.2.1",
    "vitest": "^3.0.2"
  },
  "peerDependencies": {
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "swisseph": "^0.5.17"
  },
  "keywords": [
    "astronomy",
    "ephemeris",
    "swisseph",
    "sweph",
